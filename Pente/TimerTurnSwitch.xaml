<Window x:Class="Pente.TimerTurnSwitch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pente"
        mc:Ignorable="d"
        Title="TimerTurnSwitch" Height="250" Width="350">
    <Grid Background="#FF98E3FF">
        <Button Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="125" Background="White" BorderBrush="Black" Height="40" FontFamily="Cooper Black" FontSize="16" Click="Button_Click"/>
        <TextBlock x:Name="tbl_alert" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="250" FontFamily="Cooper Black" FontSize="20"/>

    </Grid>
</Window>
